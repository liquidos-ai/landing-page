---
export interface Props {
	eyebrow?: string;
	title: string;
	description: string;
}

const { eyebrow, title, description } = Astro.props;
---

<div class="paper group rounded-2xl p-6 transition-shadow hover:shadow-[0_18px_45px_rgba(15,23,42,0.10)]">
	<div class="flex items-start gap-4">
		<div class="mt-1 flex h-10 w-10 items-center justify-center rounded-xl border border-subtle bg-card-surface text-heading">
			<slot name="icon" />
		</div>
		<div class="space-y-2">
			{eyebrow ? <p class="text-xs uppercase tracking-[0.2rem] text-muted">{eyebrow}</p> : null}
			<h3 class="text-lg font-semibold text-heading">{title}</h3>
			<p class="text-sm text-muted">{description}</p>
		</div>
	</div>
</div>

