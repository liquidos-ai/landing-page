---
import Layout from "../../layouts/Layout.astro";
import { getCollection, getEntryBySlug } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;
const post = await getEntryBySlug("blog", slug!);
const { Content } = await post?.render();

if (!post) {
    throw new Error("Post not found");
}
---

<Layout
    title={`${post.data.title} | LiquidOS Blog`}
    description={post.data.description}
>
    <article class="max-w-3xl text-primary">
        <p class="section-label">{post.data.tag}</p>
        <h1 class="serif-head mb-2 text-4xl text-heading">{post.data.title}</h1>
        <p class="text-sm text-muted">
            {
                post.data.date.toLocaleDateString("en-US", {
                    month: "short",
                    day: "numeric",
                    year: "numeric",
                })
            } Â· {post.data.readTime}
        </p>
        <div class="markdown mt-6">
            <Content />
        </div>
    </article>
</Layout>
